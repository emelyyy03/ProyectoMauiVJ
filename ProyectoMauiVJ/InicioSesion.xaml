<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoMauiVJ.InicioSesion" BackgroundColor="Wheat"
             Title="InicioSesion">
   
    <ScrollView>
        <VerticalStackLayout Padding="40" Spacing="20">
        
        <Label Padding="5" Text="INICIAR SESION" HorizontalTextAlignment="Center" TextColor="Chocolate" FontSize="Title"/>
        <Entry x:Name="NombreUsuario" Placeholder="Ingrese Su Nombre De Usuario" TextColor="Black"/>
            <Entry x:Name="Pass" Keyboard="Numeric" Placeholder="Ingrese Su Contraseña" TextColor="Black" />
            <Button x:Name="BtnIniciarSesion" Text="Iniciar Sesión"  TextColor="White" BackgroundColor="Chocolate" Clicked="BtnIniciarSesion_Clicked"/>
        <Label Padding="5" Text="      "/>

        <Label Text="¿No tienes una cuenta?" TextColor="Black" HorizontalTextAlignment="Center"/>
        <Label Text="Registrate dando clic en el siguiente botón"  HorizontalTextAlignment="Center"/>
            <Button x:Name="BtnRegistrarse" Text="Registrarse" WidthRequest="150" Clicked="BtnRegistrarse_Clicked" TextColor="White" BackgroundColor="Chocolate"/>



            <Button x:Name="btnVisitantes" Text="VER REGISTRO DE VISITANTES" Clicked="btnVisitantes_Clicked" TextColor="White" BackgroundColor="Chocolate"/>

    </VerticalStackLayout>
    </ScrollView>
</ContentPage>