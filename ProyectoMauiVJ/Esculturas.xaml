<?xml version="1.0" encoding="utf-8" ?>
    
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoMauiVJ.Esculturas" BackgroundColor="Wheat"
             Title="Esculturas">

    <ScrollView>
        <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Padding="40" Spacing="20">
        
        <Label Text="Arte escultórico más famoso en el mundo" HorizontalTextAlignment="Center" TextColor="Chocolate"
               FontFamily="FontDouglast" FontSize="40"/>
        <Label Text="Acontinuaion te presentamos las 7 obras mas conocidas en esta rama del arte como lo son las esculturas, distintos artistas pero con un gran potencial que sigue vivo depues de años."
               TextColor="Black" HorizontalTextAlignment="Center" FontFamily="FuenteQonitta" FontSize="30"/>

            <Frame BorderColor="Chocolate"  BackgroundColor="Wheat" CornerRadius="10" Padding="10">
                <StackLayout Spacing="10" Padding="10">
                    <Label Text="David" TextColor="Chocolate" HorizontalTextAlignment="Center" FontFamily="FontDouglast" FontSize="35"/>

                    <Image
                         Source="david.jpg"
                         HeightRequest="300"
                         Aspect="AspectFit"
                         SemanticProperties.Description="" />

                    <Label Text="Informacion de esta pieza:" TextColor="Chocolate" FontFamily="FontDouglast" FontSize="30" HorizontalTextAlignment="Center"/>
                    <Label Text="El David es una escultura de mármol blanco de 5,17 metros​ de altura y 5572 kilogramos de peso, ​ realizada por Miguel Ángel Buonarroti entre 1501 y 1504 por encargo de la Opera del Duomo de la catedral de Santa María del Fiore de Florencia."
                           TextColor="Black" HorizontalTextAlignment="Center" FontFamily="FuenteQonitta" FontSize="25"/>
                    <Label Text="Datos importantes:" TextColor="Chocolate" FontFamily="FontDouglast" FontSize="30" HorizontalTextAlignment="Center"/>
                    <Label Text="Artista: Miguel Angel
                           
                           
                           
                           
                           
                           Ubicación: Galería de la Academia de Florencia (desde 1873), 
                           
                           
                           
                           
                           
                           Materiales: Mármol de Carrara 
                           
                           
                           
                           
                           
                           Fecha de creación: 1501 - 1504. " 
                           TextColor="Black" HorizontalTextAlignment="Center" FontFamily="FuenteQonitta" FontSize="25"/>
                </StackLayout>
            </Frame>

            <Frame BorderColor="Chocolate"  BackgroundColor="Wheat" CornerRadius="10" Padding="10">
                <StackLayout Spacing="10" Padding="10">
                    <Label Text="La virgen de la piedad (The Madonna della Pietà)" TextColor="Chocolate" HorizontalTextAlignment="Center" FontFamily="FontDouglast" FontSize="35"/>

                    <Image
                        Source="madonna.jpg"
                        HeightRequest="300"
                        Aspect="AspectFit"
                        SemanticProperties.Description="" />

                    <Label Text="Informacion de esta pieza:" TextColor="Chocolate" FontFamily="FontDouglast" FontSize="30" HorizontalTextAlignment="Center"/>
                    <Label Text="La Piedad del Vaticano o Pietà es un grupo escultórico en mármol realizado por Miguel Ángel entre 1498 y 1499. Sus dimensiones son 1,74 por 1,95 m. Se encuentra en la Ciudad del Vaticano. La escultura representa a la Virgen María sosteniendo a Cristo muerto tras la crucifixión." 
                           TextColor="Black" HorizontalTextAlignment="Center" FontFamily="FuenteQonitta" FontSize="25"/>
                    <Label Text="Datos importantes:" TextColor="Chocolate" FontFamily="FontDouglast" FontSize="30" HorizontalTextAlignment="Center"/>
                    <Label Text="Artista: Miguel Angel 
                           
                           
                           
                           
                           
                           Ubicación: Basílica de San Pedro 
                           
                           
                           
                           
                           
                           Fecha de creacion: 1498 - 1499 
                           
                           
                           
                           
                           
                           Materiales: Mármol."
                           TextColor="Black" HorizontalTextAlignment="Center" FontFamily="FuenteQonitta" FontSize="25"/>
                </StackLayout>
            </Frame>

            <Frame BorderColor="Chocolate"  BackgroundColor="Wheat" CornerRadius="10" Padding="10">
                <StackLayout Spacing="10" Padding="10">
                    <Label Text="Piedad rondanini" TextColor="Chocolate" HorizontalTextAlignment="Center" FontFamily="FontDouglast" FontSize="35"/>

                    <Image
                        Source="rondanini.jpg"
                        HeightRequest="300"
                        Aspect="AspectFit"
                        SemanticProperties.Description="" />

                    <Label Text="Informacion de esta pieza:" TextColor="Chocolate" FontFamily="FontDouglast" FontSize="30" HorizontalTextAlignment="Center"/>
                    <Label Text="La Piedad Rondanini se encuentra en el museo del Castillo Sforzesco de Milán. Considerada como la última obra esculpida por Miguel Ángel, ya que estuvo trabajando en ella seis días antes de morir. Fue encontrada en su estudio después de su muerte e inventariada."
                           TextColor="Black" HorizontalTextAlignment="Center" FontFamily="FuenteQonitta" FontSize="25"/>
                    <Label Text="Datos importantes:" TextColor="Chocolate" FontFamily="FontDouglast" FontSize="30" HorizontalTextAlignment="Center"/>
                    <Label Text="Artista: Miguel Angel 
                           
                           
                           
                           
                           
                           Ubicacion: Castello Sforzesco (Castillo de Los Sforza) 
                           
                           
                           
                           
                           
                           Fecha de creacion: 1552 - 1564 
                           
                           
                           
                           
                           
                           Material: Mármol." 
                           TextColor="Black" HorizontalTextAlignment="Center" FontFamily="FuenteQonitta" FontSize="25"/>
                </StackLayout>
            </Frame>

            <Frame BorderColor="Chocolate"  BackgroundColor="Wheat" CornerRadius="10" Padding="10">
                <StackLayout Spacing="10" Padding="10">
                    <Label Text="La sexta angustia" TextColor="Chocolate" HorizontalTextAlignment="Center" FontFamily="FontDouglast" FontSize="35"/>

                    <Image
                        Source="sexta.jpg"
                        HeightRequest="300"
                        Aspect="AspectFit"
                        SemanticProperties.Description="" />

                    <Label Text="Informacion de esta pieza:" TextColor="Chocolate" FontFamily="FontDouglast" FontSize="30" HorizontalTextAlignment="Center"/>
                    <Label Text="La Sexta Angustia, también conocida como La Piedad, es un conjunto escultórico realizado en 1616 por el artista Gregorio Fernández, conservado en el Museo Nacional de Escultura de Valladolid​ desde mediados del siglo XIX."
                           TextColor="Black" HorizontalTextAlignment="Center" FontFamily="FuenteQonitta" FontSize="25"/>
                    <Label Text="Datos importantes:" TextColor="Chocolate" FontFamily="FontDouglast" FontSize="30" HorizontalTextAlignment="Center"/>
                    <Label Text="Artista: Gregorio Fernández
                           
                           
                           
                           
                           
                           Ubicación: Museo Nacional de Escultura de Valladolid.
                           
                           
                           
                           
                           
                           Fecha de creacion: 1616
                           
                           
                           
                           
                           
                           Material: Madera policromada" 
                           TextColor="Black" HorizontalTextAlignment="Center" FontFamily="FuenteQonitta" FontSize="25"/>
                </StackLayout>
            </Frame>

            <Frame BorderColor="Chocolate"  BackgroundColor="Wheat" CornerRadius="10" Padding="10">
                <StackLayout Spacing="10" Padding="10">
                    <Label Text="Moises" TextColor="Chocolate" HorizontalTextAlignment="Center" FontFamily="FontDouglast" FontSize="35"/>

                    <Image
                        Source="moises.jpg"
                        HeightRequest="300"
                        Aspect="AspectFit"
                        SemanticProperties.Description="" />

                    <Label Text="Informacion de esta pieza:" TextColor="Chocolate" FontFamily="FontDouglast" FontSize="30" HorizontalTextAlignment="Center"/>
                    <Label Text="El Moisés es una escultura de mármol blanco encargada en 1505, realizada en 1513-1536, y retocada en 1592, obra de Miguel Ángel, centrada en la figura bíblica de Moisés."
                           TextColor="Black" HorizontalTextAlignment="Center" FontFamily="FuenteQonitta" FontSize="25" />
                    <Label Text="Datos importantes:" TextColor="Chocolate" FontFamily="FontDouglast" FontSize="30" HorizontalTextAlignment="Center"/>
                    <Label Text="Artista: Miguel Angel 
                           
                           
                           
                           
                           
                           Ubicacion actual: San Pietro in Vincoli 
                           
                           
                           
                           
                           
                           Material: Mármol
                           
                           
                           
                           
                           
                           Fecha de creacion: 1513 - 1515." 
                           TextColor="Black" HorizontalTextAlignment="Center" FontFamily="FuenteQonitta" FontSize="25"/>
                </StackLayout>
            </Frame>

            <Frame BorderColor="Chocolate"  BackgroundColor="Wheat" CornerRadius="10" Padding="10">
                <StackLayout Spacing="10" Padding="10">
                    <Label Text="Laocoonte y sus hijos" TextColor="Chocolate" HorizontalTextAlignment="Center" FontFamily="FontDouglast" FontSize="35"/>

                    <Image
                        Source="laocoonte.jpg"
                        HeightRequest="300"
                        Aspect="AspectFit"
                        SemanticProperties.Description="" />

                    <Label Text="Informacion de esta pieza:" TextColor="Chocolate" FontFamily="FontDouglast" FontSize="30" HorizontalTextAlignment="Center"/>
                    <Label Text="Laocoonte y sus hijos es un grupo escultórico griego de datación controvertida, ​ aunque suele considerarse una obra original de principios de la era cristiana.​ Es una de las esculturas antiguas más famosas desde que fue excavada en Roma en 1506.​"
                           TextColor="Black" HorizontalTextAlignment="Center" FontFamily="FuenteQonitta" FontSize="25"/>
                    <Label Text="Datos importantes:" TextColor="Chocolate" FontFamily="FontDouglast" FontSize="30" HorizontalTextAlignment="Center"/>
                    <Label Text="Artistas: Agesandro, Polidoro y Atenodoro de Rodas
                           
                           
                           
                           
                           
                           Ubicacion: El Museo Vaticano
                           
                           
                           
                           
                           
                           Material: White marble. " 
                           TextColor="Black" HorizontalTextAlignment="Center" FontFamily="FuenteQonitta" FontSize="25"/>
                </StackLayout>
            </Frame>

            <Frame BorderColor="Chocolate"  BackgroundColor="Wheat" CornerRadius="10" Padding="10">
                <StackLayout Spacing="10" Padding="10">
                    <Label Text="Zeus de Olimpia" TextColor="Chocolate" HorizontalTextAlignment="Center" FontFamily="FontDouglast" FontSize="35"/>

                    <Image
                        Source="zeus.jpg"
                        HeightRequest="300"
                        Aspect="AspectFit"
                        SemanticProperties.Description="" />

                    <Label Text="Informacion de esta pieza:" TextColor="Chocolate" FontFamily="FontDouglast" FontSize="30" HorizontalTextAlignment="Center"/>
                    <Label Text="La Estatua de Zeus en Olimpia fue una gran escultura crisoelefantina creada por el escultor Fidias. Situada en Olimpia, se considera una de las Siete Maravillas del Mundo Antiguo."
                           TextColor="Black" HorizontalTextAlignment="Center" FontFamily="FuenteQonitta" FontSize="25"/>
                    <Label Text="Datos importantes:" TextColor="Chocolate" FontFamily="FontDouglast" FontSize="30" HorizontalTextAlignment="Center"/>
                    <Label Text="Artista: Fidias
                           
                           
                           
                           
                           
                           
                           Inauguración: 435 a. C. 
                           
                           
                           
                           
                           
                           
                           Materiales: Bronce, Oro, Marfil, Ébano
                           
                           
                           
                           
                           
                           Fue destruida en el siglo V d.C. debido a un incendio." 
                           TextColor="Black" HorizontalTextAlignment="Center" FontFamily="FuenteQonitta" FontSize="25"/>
                </StackLayout>
            </Frame>

            <Button x:Name="btnVolver" FontFamily="FontBabylove" FontSize="25" Text="Volver" HorizontalOptions="EndAndExpand" TextColor="White" BackgroundColor="Chocolate"
            VerticalOptions="EndAndExpand"  WidthRequest="100" Clicked="btnVolver_Clicked"/>
            
    </StackLayout>
    </ScrollView>
</ContentPage>