<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundColor="Wheat"
             x:Class="ProyectoMauiVJ.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30"
            Spacing="15">
            <Image
                Source="kaelygalleries.png"
                HeightRequest="350"
                />

            <Label
                Text="Kaely Gallery´s" TextColor="Chocolate" FontFamily="FontDouglast" FontSize="50"
                HorizontalTextAlignment="Center"/>

            <Label
                Text="Te invitamos a hecharle un vistazo a las obras de arte de las diferentes categorías"
                HorizontalTextAlignment="Center" TextColor="Black" FontSize="Title" FontAttributes="Italic"
               />

            <Button
                x:Name="CounterBtn"
                WidthRequest="300"
                Text="Ingresar a la página" 
                TextColor="White" BackgroundColor="Chocolate"
                Clicked="OnCounterClicked"
                HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
